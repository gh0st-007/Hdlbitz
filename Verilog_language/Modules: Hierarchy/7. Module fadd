module top_module (
    input [31:0] a,
    input [31:0] b,
    output [31:0] sum
);//
	wire n1,n2;
    add16 a1(a[15:0],b[15:0],1'b0,sum[15:0],n1);
    add16 a2(a[31:16],b[31:16],n1,sum[31:16],n2);
    
endmodule

//full adder module
module add1 ( input a, input b, input cin,   output sum, output cout );
	assign sum = a^b^cin;
    assign cout = a&b|b&cin|cin*a;

endmodule
